<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="sdcard_switch"
        android:summary="If true, will scan external storage for music files"
        android:title="Scan External SDCard" />

    <EditTextPreference
        android:defaultValue="@string/pref_default_port"
        android:inputType="numberDecimal"
        android:key="port_value"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_server_port" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_hotspot"
        android:inputType="textCapWords"
        android:key="hotspot_name"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_hotspot_name" />

</PreferenceScreen>
